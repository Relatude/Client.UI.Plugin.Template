{
    "compilerOptions": {
        "outDir": "./lib/",
        "sourceMap": false,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "experimentalDecorators": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck" : true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}